<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.script.scriptreservation.dao.CollectionMapper">
  <resultMap id="BaseResultMap" type="com.script.scriptreservation.po.Collection">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="script_id" jdbcType="VARCHAR" property="scriptId" />
    <result column="user_id" jdbcType="VARCHAR" property="userId" />
  </resultMap>
  <select id="personalCollection" resultType="com.script.scriptreservation.vo.CollectionVo" parameterType="string">
    SELECT
      s.script_name AS scriptName,
      c.collection_time AS collectionTime,
      c.script_id AS scriptId
    FROM
      collection c
        LEFT JOIN script s ON c.script_id = s.id
    WHERE
      c.user_id = #{id}
  </select>
    <select id="getCollectionStatu" resultType="java.lang.Integer">
      SELECT
        COUNT(1)
      FROM
        collection
      WHERE
        user_id = #{userId}
        AND script_id = #{scriptId}
    </select>
</mapper>
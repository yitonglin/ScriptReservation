    <insert id="payMoney">
        UPDATE `user` SET money = #{money} WHERE id = #{userId}
    </insert>

    <select id="getUserByUserName" parameterType="string" resultMap="BaseResultMap">
      SELECT
        *
      FROM
        `user`
      WHERE
        user_name = #{userName}
  </select>

  <update id="emailActive" parameterType="com.script.scriptreservation.po.User">
      UPDATE `user`
      SET STATUS = 1
      WHERE
        user_name = #{userName}
  </update>
    <update id="updateUserPassword">
        UPDATE `user`
        SET password = #{password}
        WHERE
            id = #{id}
    </update>

